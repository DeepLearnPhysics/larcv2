#!/usr/bin/env bash

out=""
while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *)    optarg= ;;
  esac

  case $1 in
      --incdir)
	  out="${LARCV_INCDIR} "
	  ;;
      --includes)
	  out="-I${LARCV_INCDIR} "
	  if [ $LARCV_OPENCV -eq 1 ]; then
	      out+="-I${OPENCV_INCDIR} "
	  fi
	  out+=`python-config --includes`
	  out+=" "
	  if [ $LARCV_NUMPY -eq 1 ]; then
	      out+="-I"
	      out+=`python -c "import numpy; print numpy.get_include()"`
	      out+=" "
	  fi
	  ;;
      --libdir)
	  out="{$LARCV_LIBDIR} "
	  ;;
      --libs)
	  out=""
	  if [ $LARCV_NUMPY -eq 1 ]; then
	      out+=" -L"
	      out+=`python-config --prefix`
	      out+="/lib/ "
	      out+=`python-config --ldflags`
	      out+=" "
	  fi
	  if [ $LARCV_OPENCV -eq 1 ]; then
	      out+=" -L${OPENCV_LIBDIR} -lopencv_core -lopencv_highgui -lopencv_imgproc -lopencv_imgcodecs "
	  fi
	  out+=" -L${LARCV_LIBDIR} -llarcv "
	  ;;
      --help)
	  ### Print a help message
          echo "Usage: `basename $0` [options]"
	  echo ""
	  echo "  --includes ... print out includes"
	  echo "  --libs     ... print out libraries"
	  exit 0
	  ;;
      *)
	  ### Give an error
          echo "Unknown argument \"$1\"!" 1>&2
	  echo "${usage}" 1>&2
	  exit 1
	  ;;
  esac
  shift
done
echo $out
